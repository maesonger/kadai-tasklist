<div class="row">
  <div class='col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6'>
    
    <h1>id = <%= @task.id %> のタスク詳細ページ</h1>
    
    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th>タスク</th>
        <td><%= @task.content %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
      </tr>
    </table>
    
    <%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-default'%>
    <%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>

  </div>
</div>